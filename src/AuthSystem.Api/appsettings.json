{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "Jwt": {
    "SecretKey": "your-very-strong-and-secure-secret-key-here-32+chars",
    "Issuer": "https://yoursite.com",
    "Audience": "https://yoursite.com",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7,
    "EmailConfirmationTokenExpirationHours": 24,
    "PasswordResetTokenExpirationHours": 1,
    "PhoneVerificationTokenExpirationMinutes": 15,
    "UseAsymmetricEncryption": false,
    "IncludeDeviceInfo": true,
    "IncludeIpAddress": true,
    "IncludeUserAgent": true,
    "IncludeSessionId": true,
    "IncludeVersion": true,
    "Version": "1.0",
    "UseRevokedTokenCache": true,
    "RevokedTokenCacheDurationMinutes": 60,
    "UseDeviceBoundTokens": true,
    "UseIpBoundTokens": true,
    "UseUserAgentBoundTokens": true,
    "UseTimeBoundTokens": true,
    "MaxActiveTokensPerUser": 5,
    "UseOneTimeTokens": true,
    "OneTimeTokenExpirationMinutes": 5,
    "UseUsageLimitedTokens": true,
    "MaxTokenUsageCount": 1,
    "DefaultAccessScopes": [
      "read",
      "write"
    ],
    "AllowedOperations": [
      "login",
      "logout",
      "refresh"
    ],
    "AllowedResources": [
      "users",
      "roles",
      "permissions"
    ],
    "AllowedRoles": [
      "Admin",
      "User"
    ],
    "AllowedPermissions": [
      "ReadUsers",
      "WriteUsers"
    ]
  },

  // اضافه شده: Connection String برای پایگاه داده
  "ConnectionStrings": {
    // برای PostgreSQL
    "DefaultConnection": "Host=localhost;Database=AuthSystemDb;Username=your_username;Password=your_password"
    // برای SQL Server (در صورت استفاده)
    // "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=AuthSystemDb;Trusted_Connection=true;TrustServerCertificate=true"
  },
  "AllowedHosts": "*"
}